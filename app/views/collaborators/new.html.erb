<% provide(:title, 'Cadastrar Colaborador') %>
<h1>Cadastrar Colaborador</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@collaborator) do |f| %>
      <%= render 'shared/error_messages', object: f.object  %>

      <small><p align="right"> <span style="color: red;">vermelho</span> : Campos obrigatórios</p><br/></small>

      <div class="personal-info">
          <h2>Dados Pessoais</h2>
          <label>Nome <span style="color: red;">*</span></label>
          <%= f.text_field :name %>

          <label>Gênero <span style="color: red;">*</span></label>
          <%= f.select :gender, options_for_select(["Homem", "Mulher"]) %>
          
          <label>Data de Nascimento (<span style="color: red;">dd/mm/aaaa</span>)</label>
          <%= f.text_field :birth_date, :value => (@collaborator.birth_date.blank? ? '' : @collaborator.birth_date.strftime('%d/%m/%Y')) %>
      </div>

      <div class="contact-info">
          <h2>Contato</h2>
          <label>E-mail <span style="color: red;">*</span></label>
          <%= f.text_field :email %>
      
          <label>Telefone 1 <span style="color: red;">*</span></label>
          <%= f.text_field :fone1 %>
          
          <%= f.label 'Telefone 2' %>
          <%= f.text_field :fone2 %>

          <h2>Endereço</h2>
          <label>Logradouro <span style="color: red;">*</span></label>
          <%= f.text_field :street %>
      
          <label>Número <span style="color: red;">*</span></label>
          <%= f.text_field :number %>

          <label>Bairro <span style="color: red;">*</span></label>
          <%= f.text_field :hood %>
          
          <label>CEP (Formato: <span style="color: red;">28035581</span>)
          | <small><a href="http://www.buscacep.correios.com.br/" target="_blank">
            Procurar CEP
            </small></a>
          </label>
          <%= f.text_field :cep %>
          
      </div>

      <br/><br/>
      <h3 align="center">Verificação de segurança</h3>
      <br/>

      <label>Senha <span style="color: red;">*</span></label>
      <%= f.password_field :password %>

      <label>Confirmação <span style="color: red;">*</span></label>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Cadastrar", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
