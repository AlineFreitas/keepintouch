<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.collaborator), feed_item.collaborator %>
  <span class="collaborator">
    <%= link_to feed_item.collaborator.name, feed_item.collaborator %>
  </span>
  <span class="name"><%= feed_item.name %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.collaborator) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.name %>
  <% end %>
</li>
