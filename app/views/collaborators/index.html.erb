<% provide(:title, 'Lista de Colaboradores') %>

<% if @collaborators.size ==1 %>
  <h2>O único colaborador cadastrado é você mesmo!</h2>
  <h3>Que tal <%= link_to "cadastrar", new_collaborator_path %> um novo?</h3>
<% else %>

  <h1>Todos Colaboradores</h1>
  <p align="right"><%= link_to "Novo Colaborador", new_collaborator_path %></p>
  <%= will_paginate %>
  <ul class="collaborators">
    <%= render @collaborators %>
  </ul>
  <%= will_paginate %>

<% end %>
